export PROJECT_FOLDER=$(pwd)
source ${PROJECT_FOLDER}/.env
alias start_chain='cd ${PROJECT_FOLDER}/unilib && yarn hardhat node --fork https://mainnet.infura.io/v3/${MY_INFURA_KEY}'
alias start_front='cd ${PROJECT_FOLDER}/webapp && yarn dev'
alias start_db='cd ${PROJECT_FOLDER} && docker-compose up'
alias start_backend='cd ${PROJECT_FOLDER}/backend && npm run start:dev'
alias deploy_all='cd ${PROJECT_FOLDER} && chmod +x deploy.sh && ./deploy.sh'